.container {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    background: #F4F4F4;
    overflow: auto;
    -webkit-overflow-scrolling: touch;
}

.assessment_block {
    width: 100%;
    height: 202rpx;
    margin-top: 25rpx;
    background: #FFFFFF;
}

.assessment_block .assessment_score {
    padding-top: 20rpx;
    display: flex;
    align-items: baseline;
    justify-content: center;
}

.assessment_block .assessment_score .score {
    color: #E52229;
    font-size: 72rpx;
    font-weight: bold;
}

.assessment_block .tips_text {
    font-size: 26rpx;
    color: #999999;
    text-align: center;
    position: relative;
    top: -6rpx;
}


/* 输入框项 */

.input_block {
    background: #fff;
    padding: 0 30rpx;
    margin-top: 24rpx;
}

.input_block .input_item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 96rpx;
    border-bottom: 2rpx solid #F4F4F4;
    position: relative;
}

.input_block .input_item .input_name {
    font-size: 28rpx;
    color: #666666;
}

.input_block .input_cell input {
    width: 360rpx;
    font-size: 28rpx;
    color: #333333;
    text-align: right;
}

.input_block .input_item .picker {
    width: 100%;
    height: 96rpx;
    line-height: 96rpx;
    position: absolute;
    right: 34rpx;
    text-align: right;
    top: 0;
}

.input_block .input_item .right_arrow {
    width: 19rpx;
    height: 34rpx;
    margin-left: 24rpx;
}


/* 友情提示 */

.tooltip_box {
    background: #F3E4E4;
    margin: 24rpx 30rpx 0;
    border-radius: 10rpx;
    display: flex;
}

.tooltip_box .tooltip_icon {
    flex-shrink: 80rpx;
}

.tooltip_box .tooltip_icon image {
    width: 56rpx;
    height: 56rpx;
    margin: 32rpx 0 0 22rpx;
}

.tooltip_box .tooltip_block {
    flex: 1;
    padding: 26rpx 24rpx 0;
}

.tooltip_box .tooltip_block .tooltip_title {
    font-size: 28rpx;
    color: #E52229;
    font-weight: bold;
}

.tooltip_box .tooltip_block .tooltip_text {
    font-size: 24rpx;
    color: #666666;
    margin-bottom: 28rpx;
    display: block;
}

.submit_btn {
    width: 686rpx;
    height: 96rpx;
    font-size: 30rpx;
    color: #FFFEFE;
    line-height: 96rpx;
    background: #E52B32;
    border-radius: 48rpx;
    margin: 72rpx auto 0;
    text-align: center;
}