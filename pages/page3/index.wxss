.container {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    overflow: auto;
    background: #fff;
}

.container .menu_cell {
    height: 66rpx;
    line-height: 66rpx;
    display: flex;
}

.container .menu_cell_title {
    font-size: 28rpx;
    margin-left: 30rpx;
    width: 130rpx;
}

.container .menu_cell_bar {
    display: flex;
}

.container .select_items {
    width: 452rpx;
    border: 2rpx solid #BABABA;
    display: flex;
    position: relative;
}

.container .menu_cell_bar .item_cell {
    width: 452rpx;
    font-size: 26rpx;
    text-indent: 18rpx;
    position: relative;
    top: -1rpx;
    overflow: hidden;
}

.container .triangle_icons {
    width: 46rpx;
    height: 46rpx;
    background: url("http://files.nacy.cc/triangle_icons.png") no-repeat;
    background-size: contain;
    position: absolute;
    right: 0;
    top: 8rpx;
    background-color: #fff;
}

.input_item {
    display: flex;
    align-items: center;
    margin: 48rpx 30rpx;
}
.input_item .item_text {
    width: 130rpx;
    
}
.input_item .input_bar {
    border: 2rpx solid #A9A9A9;
    padding: 6rpx 18rpx;
    width: 415rpx;
}
.input_item .input_bar input {
    font-size: 32rpx;
    color: #000;
}

.container .sub_btn {
    width: 460rpx;
    height: 76rpx;
    line-height: 76rpx;
    text-align: center;
    background: #169BD4;
    color: #fff;
    font-size: 30rpx;
    margin: 176rpx auto 46rpx;
    border-radius: 12rpx;
}

.container .tips_text {
    background: #F2F2F2;
    width: 79%;
    margin: 0 auto;
    padding: 16rpx;
    font-size: 30rpx;
    color: #000;
}