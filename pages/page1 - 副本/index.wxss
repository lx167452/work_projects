page {
    background: #FFFFFF;
}

.container {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    overflow: auto;
}

.container .title {
    margin-bottom: 378rpx;
    background: #2695CD;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    font-size: 28rpx;
    color: #fff;
}

.container .menu_box {
    margin-top: 180rpx;
}

.container .menu_box .menu_item {
    width: 600rpx;
    height: 90rpx;
    line-height: 90rpx;
    margin: 0 auto 40rpx;
    background: #2695CD;
    text-align: center;
    font-size: 32rpx;
    border-radius: 10rpx;
    color: #fff;
}

.container .tips_text {
    font-size: 24rpx;
    color: #333333;
    width: 456rpx;
    margin: 282rpx auto 0;
