.container {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    overflow: auto;
    background: #fff;
}

.container .menu_cell {
    height: 54rpx;
    line-height: 54rpx;
    display: flex;
    padding: 30rpx;
}

.container .menu_cell_title {
    width: 130rpx;
    font-size: 28rpx;
    text-align: center;
    background: #f2f2f2;
    margin-right: 12rpx;
}

.container .menu_cell_bar {
    display: flex;
}

.container .select_items {
    width: 248rpx;
    border: 2rpx solid #BABABA;
    display: flex;
    position: relative;
}

.container .menu_cell_bar .item_cell {
    width: 248rpx;
    font-size: 26rpx;
    text-indent: 8rpx;
    position: relative;
    top: -1rpx;
    overflow: hidden;
}

.container .triangle_icons {
    width: 46rpx;
    height: 46rpx;
    background: url("http://files.nacy.cc/triangle_icons.png") no-repeat;
    background-size: contain;
    position: absolute;
    right: 0;
    top: 4rpx;
    background-color: #fff;
}

.container .to_txt {
    margin: 0 10rpx;
}

.container .interval {
    display: inline-block;
    color: transparent;
}

.cell_item_bar {
    display: flex;
    align-items: center;
    margin-top: 32rpx;
}

.cell_item_bar .cell_item_title {
    margin-left: 16rpx;
    font-size: 26rpx;
    /* display: flex; */
    text-align: right;
}

.cell_item_bar .cell_item {
    border: 2rpx solid #BABABA;
    position: relative;
    margin-left: 20rpx;
}

.cell_item_bar .item_select {
    width: 248rpx;
    font-size: 26rpx;
    text-indent: 8rpx;
    position: relative;
    top: 0rpx;
    height: 50rpx;
    line-height: 50rpx;
    overflow: hidden;
}

.cell_item_bar .tips_txt {
    font-size: 26rpx;
    margin-left: 12rpx;
}

.item_cell_box {
    padding: 30rpx;
}

.container .item_cell_box .width314 {
    width: 314rpx;
}

.container .item_cell_box .width156 {
    width: 156rpx;
}

.container .item_cell_box .width132 {
    width: 132rpx;
}

.container .item_cell_box .width328 {
    width: 328rpx;
}

.container .item_cell_box .width242 {
    width: 242rpx;
}

.container .item_cell_box .width190 {
    width: 190rpx;
}

.container .item_cell_box .entry_deduction {
    width: 224rpx;
    padding: 0 12rpx;
    font-size: 28rpx;
    color: #333;
}

.selected_active {
    border-color: #2695CD !important;
}

.container .sub_btn {
    width: 460rpx;
    height: 76rpx;
    line-height: 76rpx;
    text-align: center;
    background: #169BD4;
    color: #fff;
    font-size: 32rpx;
    margin: 60rpx auto 46rpx;
    border-radius: 12rpx;
    letter-spacing: 10rpx;
}