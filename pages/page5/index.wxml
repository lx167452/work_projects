<view class="container">
    <!-- 输入框项 -->
    <view class="input_block">
        <view class="cell_line">
            <view class="line_sign"></view>
            录入官方公布的考核成绩
        </view>
        <view class="input_item">
            <view class="input_name">考核分</view>
            <view class="input_cell">
                <input type="text" name="assessment_score" value="{{assessment_score}}" placeholder="请输入您的考核成绩" autocomplete="off" maxlength="8" bindinput="assessmentScoreFn" />
            </view>
        </view>
        <view class="cell_line">
            <view class="line_sign"></view>
            录入文化考试成绩
        </view>
        <view class="input_item">
            <view class="input_name">行测</view>
            <view class="input_cell">
                <input type="number" name="travel_test" value="{{travel_test}}" placeholder="请输入您的行测成绩" autocomplete="off" maxlength="8" bindinput="travelTestFn" />
            </view>
        </view>
        <view class="input_item">
            <view class="input_name">申论</view>
            <view class="input_cell">
                <input type="number" name="exposition" value="{{exposition}}" placeholder="请输入您的申论成绩" autocomplete="off" maxlength="8" bindinput="expositionFn" />
            </view>
        </view>
    </view>
    <view class="submit_btn" bindtap="submitFn">确认提交数据并查看</view>
</view>