.container {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    overflow: auto;
    background: #fff;
}
.container .title {
    font-size: 30rpx;
    color: #000;
    text-align: center;
    margin: 0 auto;
    padding-top: 72rpx;
}
.input_item {
    display: flex;
    align-items: center;
    margin: 48rpx 30rpx;
}
.input_item .item_text {
    width: 92rpx;
}
.input_item .input_bar {
    border: 2rpx solid #A9A9A9;
    padding: 6rpx 18rpx;
    width: 415rpx;
}
.input_item .input_bar input {
    font-size: 32rpx;
    color: #000;
}

.container .sub_btn {
    width: 460rpx;
    height: 76rpx;
    line-height: 76rpx;
    text-align: center;
    background: #169BD4;
    color: #fff;
    font-size: 30rpx;
    margin: 176rpx auto 46rpx;
    border-radius: 12rpx;
}
